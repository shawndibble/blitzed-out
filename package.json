{
  "homepage": "https://blitzedout.com",
  "type": "module",
  "name": "blitzed-out",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -b master -d dist",
    "cleanup:debug": "echo 'Checking for debug code...' && ! grep -r -B1 -A1 'console\\.log\\|debugger' src/ --include='*.ts' --include='*.tsx' --include='*.js' --include='*.jsx' --exclude-dir=__tests__ --exclude='*test*' --exclude='logger.ts' | grep -v 'NODE_ENV.*development' | grep -v '// to log results' | grep 'console\\.log\\|debugger' || (echo '✅ No problematic debug code found.' && exit 0)",
    "cleanup:comments": "echo 'Checking for excessive comments...' && ! grep -r '// TODO\\|// FIXME\\|// HACK\\|// XXX' src/ --include='*.ts' --include='*.tsx' --include='*.js' --include='*.jsx' || (echo '⚠️ TODO/FIXME comments found. Consider addressing or documenting them properly.' && exit 0)",
    "lint": "eslint --format=compact --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --write .",
    "start": "vite",
    "build": "tsc --project tsconfig.build.json && vite build",
    "prepare": "husky",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest",
    "test:run": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --no-watch",
    "test:memory": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --no-watch --reporter=dot",
    "test:focused": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --no-watch --reporter=verbose",
    "test:failures": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --no-watch --reporter=dot --bail=10",
    "test:ci": "NODE_OPTIONS='--max-old-space-size=3072' vitest run --no-watch --config=vitest.ci.config.ts",
    "test:ci-safe": "NODE_OPTIONS='--max-old-space-size=1024' vitest run --no-watch --config=vitest.ci.config.ts src/locales/__tests__/fileParity.test.ts src/services/__tests__/translationUsage.test.ts",
    "test:ci-minimal": "NODE_OPTIONS='--max-old-space-size=1536' vitest run --no-watch --config=vitest.ci.config.ts --bail=5",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:diagnose": "node scripts/diagnose-hanging-tests.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@capacitor/camera": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/roboto": "^5.2.5",
    "@ionic/pwa-elements": "^3.2.2",
    "@mui/icons-material": "^7.0.0",
    "@mui/material": "^7.0.1",
    "@mui/x-date-pickers": "^8.0.0",
    "@tanstack/react-virtual": "^3.10.8",
    "clsx": "^2.1.0",
    "dayjs": "^1.11.10",
    "dexie": "^4.0.1-rc.1",
    "dexie-react-hooks": "^1.1.7",
    "dotenv": "^17.0.0",
    "esbuild": "^0.25.2",
    "firebase": "^12.0.0",
    "framer-motion": "^12.23.12",
    "gh-pages": "^6.0.0",
    "i18next": "^25.0.0",
    "i18next-browser-languagedetector": "^8.0.4",
    "i18next-resources-to-backend": "^1.2.1",
    "js-sha256": "^0.11.0",
    "nanoid": "^5.0.9",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-i18next": "^15.0.0",
    "react-markdown": "^10.0.0",
    "react-router-dom": "^7.0.0",
    "react-string-replace": "^1.1.1",
    "remark-gemoji": "^8.0.0",
    "remark-gfm": "^4.0.0",
    "use-sound": "^5.0.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.0.0",
    "@eslint/js": "^9.9.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-formatter-compact": "^8.40.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^16.0.0",
    "husky": "^9.1.6",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "msw": "^2.10.2",
    "path": "^0.12.7",
    "prettier": "^3.3.3",
    "typescript": "^5.8.2",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,css,scss,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
