{
  "rules": {
    "users": {
      ".read": true,
      "$userId": {
        ".read": true,
        ".write": "auth != null && auth.uid == $userId",
        ".validate": "newData.hasChildren(['displayName', 'lastSeen', 'room', 'isAnonymous']) && newData.child('displayName').isString() && newData.child('lastSeen').isNumber() && newData.child('room').isString() && newData.child('isAnonymous').isBoolean()",
        "lastSeen": {
          ".write": "auth != null && auth.uid == $userId",
          ".validate": "newData.isNumber()"
        }
      }
    },
    "rooms": {
      "$roomId": {
        "uids": {
          ".read": true,
          "$userId": {
            ".read": true,
            ".write": "auth != null && auth.uid == $userId",
            "$connectionId": {
              ".read": true,
              ".write": "auth != null && auth.uid == $userId",
              ".validate": "newData.hasChildren(['displayName', 'lastActive']) && newData.child('displayName').isString() && newData.child('lastActive').isNumber()"
            }
          }
        }
      }
    },
    "video-calls": {
      "$roomId": {
        ".read": "auth != null",
        "users": {
          ".read": "auth != null",
          "$userId": {
            ".read": "auth != null",
            ".write": "auth != null && auth.uid == $userId",
            ".validate": "newData.hasChildren(['joinedAt', 'status']) && newData.child('joinedAt').isNumber() && newData.child('status').isString()"
          }
        },
        "offers": {
          ".read": "auth != null",
          "$targetUserId": {
            ".read": "auth != null && auth.uid == $targetUserId",
            ".write": "auth != null"
          }
        },
        "answers": {
          ".read": "auth != null",
          "$targetUserId": {
            ".read": "auth != null && auth.uid == $targetUserId",
            ".write": "auth != null"
          }
        },
        "ice-candidates": {
          ".read": "auth != null",
          "$targetUserId": {
            ".read": "auth != null && auth.uid == $targetUserId",
            ".write": "auth != null"
          }
        }
      }
    },
    ".read": false,
    ".write": false
  }
}
